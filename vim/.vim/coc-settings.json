{

    /** General **/


    // leave linting to ALE
    "diagnostic.displayByAle": true,

    // customise suggestions
    "suggest.enablePreselect": true,
    "suggest.floatEnable": false,
    "suggest.removeDuplicateItems": true,

    // customise jump to other file
    "coc.preferences.jumpCommand": "tab drop",

    // autoupdating extensions weekly
    "coc.preferences.extensionUpdateCheck": "weekly",


    /** Language Servers **/


    /* html */

    "html.filetypes": [
        "html",
        "blade",
        "handlebars",
        "htmldjango"
    ],
    "html-css-support.enabledLanguages": [
        "html",
        "blade",
        "htmldjango",
        "javascriptreact",
        "typescriptreact",
        "vue"
    ],

    /* xml */

    // (a) follow "/usr/bin/java" symbolic links to real path
    // (b) track back up path to parent of first "bin" subdirectory
    // in this case:
    //   /usr/bin/java
    //          ↓   (a)
    //   /etc/alternatives/java
    //          ↓   (a)
    //   /usr/lib/jvm/java-11-openjdk-amd64/bin/java
    //          ↓   (b)
    //   /usr/lib/jvm/java-11-openjdk-amd64
    "xml.java.home": "/usr/lib/jvm/java-11-openjdk-amd64",

    /* yaml */

    "yaml.validate": false,
    "Lua.telemetry.enable": false

}
